    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug NestJS",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "start:debug"],
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "restart": true,
            "sourceMaps": true,
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to NestJS",
            "port": 9229,
            "skipFiles": ["<node_internals>/**"],
            "restart": true,
            "sourceMaps": true
        }
    ]
}